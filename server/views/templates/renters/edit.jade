extends ../../layouts/master
block content

  .row
    .col-xs-2
    .col-xs-8
      h3 Edit Renter
      form.form-horizontal(method='post', action='/renters/#{renter._id}')
        .form-group
          label.col-sm-1.control-label(for='name') Name
          .col-sm-11
            input#name.form-control(type='text', name='name', autofocus=true, value=renter.name)
        .form-group
          label.col-sm-1.control-label(for='address') Age
          .col-sm-11
            input#age.form-control(type='number', name='age', value=renter.age)= renter.age
        .form-group
          label.col-sm-1.control-label(for='gender') Gender
          .col-sm-11
            .radio
              label
                input(type='radio', name='gender', value='male', checked=renter.gender === 'male')
                span Male
            .radio
              label
                input(type='radio', name='gender', value='female', checked=renter.gender === 'female')
                span Female
        .form-group
          label.col-sm-1.control-label(for='photo') Photo URL
          .col-sm-11
            input#photo.form-control(type='url', name='photo', value=renter.photo, required)
        .form-group
          button.btn.btn-default(type='submit') Submit Edits
    .col-xs-2
