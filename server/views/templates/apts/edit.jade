extends ../../layouts/master
block content
  .row
    .col-xs-2
    .col-xs-8
      h3 Edit Apartment
      form.form-horizontal(method='post', action='/apts/#{apt._id}')
        .form-group
          label.col-sm-1.control-label(for='name') Name
          .col-sm-11
            input#name.form-control(type='text', name='name', autofocus=true, value=apt.name, required)
        .form-group
          label.col-sm-1.control-label(for='bedrooms') No. of Bedrooms
          .col-sm-11
            input#bedrooms.form-control(type='number', name='bedrooms', value=apt.bedrooms, required)
        .form-group
          label.col-sm-1.control-label(for='sqft') Square footage
          .col-sm-11
            input#sqft.form-control(type='number', name='sqft', value=apt.sqft, required)
        .form-group
          label.col-sm-1.control-label(for='rent') Rent
          .col-sm-11
            input#rent.form-control(type='number', name='rent', value=apt.rent, required)
        .form-group
          label.col-sm-1.control-label(for='photo') Photo URL
          .col-sm-11
            input#photo.form-control(type='url', name='photo', value=apt.photo, required)
        .form-group
          button.btn.btn-default(type='submit') Submit Edits
    .col-xs-2
